<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="csrf-token" content={get_csrf_token()} />
    <title>Tide Tasks</title>
    <link phx-track-static rel="stylesheet" href={~p"/assets/css/app.css"} />
    <script defer phx-track-static type="text/javascript" src={~p"/assets/js/app.js"}>
    </script>
  </head>

  <body class="h-screen overflow-hidden bg-gray-50">
    <!-- Full Screen Task Board -->
    <div class="h-full flex flex-col">
      <!-- Compact Header -->
      <div class="bg-white shadow-sm border-b border-gray-200 px-6 py-3 flex-shrink-0">
        <h1 class="text-2xl font-bold text-gray-900">Tide Tasks</h1>
      </div>
      
<!-- Create Task Form - Centered Above Columns -->
      <div class="bg-gray-100 border-b border-gray-300 px-6 py-4 flex-shrink-0">
        <div class="max-w-md mx-auto">
          <.form
            :let={f}
            for={@changeset}
            action={~p"/tasks"}
            class="bg-white rounded-lg p-6 shadow border"
          >
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Add New Task</h3>
            <div class="space-y-4">
              <.input
                field={f[:title]}
                type="text"
                placeholder="Enter task title..."
                class="text-lg"
              />
              <.input
                field={f[:description]}
                type="textarea"
                placeholder="Description (optional)"
                rows="3"
              />
              <button
                type="submit"
                class="w-full bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-semibold text-lg transition-colors"
              >
                + Add Task
              </button>
            </div>
          </.form>
        </div>
      </div>
      
<!-- Full Width Columns -->
      <div class="flex-1 flex overflow-hidden">
        
<!-- To Do Column -->
        <div class="flex-1 bg-blue-50 border-r border-blue-200 flex flex-col">
          <div class="bg-blue-100 px-6 py-4 border-b border-blue-200">
            <h2 class="text-xl font-semibold text-blue-800 flex items-center justify-between">
              To Do
              <span class="bg-blue-200 text-blue-900 text-lg px-3 py-1 rounded-full font-bold">
                {length(@tasks["todo"])}
              </span>
            </h2>
          </div>

          <div class="flex-1 p-6 overflow-y-auto">
            <!-- Tasks List -->
            <div class="space-y-4">
              <div
                :for={task <- @tasks["todo"]}
                class="bg-white border border-gray-200 rounded-lg p-6 shadow hover:shadow-lg transition-shadow"
              >
                <h3 class="font-bold text-gray-900 text-lg mb-2">{task.title}</h3>
                <p :if={task.description} class="text-gray-600 mb-4">{task.description}</p>
                <div class="flex justify-between items-center">
                  <a
                    href={"/tasks/#{task.id}/status?status=in_progress"}
                    class="bg-yellow-100 hover:bg-yellow-200 text-yellow-800 px-4 py-2 rounded-full font-semibold transition-colors"
                  >
                    → Move to In Progress
                  </a>
                  <div class="flex space-x-2">
                    <.link
                      href={~p"/tasks/#{task.id}/edit"}
                      class="text-blue-600 hover:text-blue-800 font-semibold"
                    >
                      Edit
                    </.link>
                    <a
                      href={~p"/tasks/#{task.id}"}
                      method="delete"
                      data-confirm="Delete this task?"
                      class="text-red-500 hover:text-red-700 font-semibold"
                    >
                      Delete
                    </a>
                  </div>
                </div>
              </div>
            </div>
            
<!-- Empty State -->
            <div :if={length(@tasks["todo"]) == 0} class="text-center py-16 text-gray-500">
              <div class="text-gray-400 mb-4">
                <svg
                  class="mx-auto h-16 w-16"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="1"
                    d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"
                  />
                </svg>
              </div>
              <p class="text-xl font-semibold">No tasks to do</p>
              <p>Use the form above to add your first task!</p>
            </div>
          </div>
        </div>
        
<!-- In Progress Column -->
        <div class="flex-1 bg-yellow-50 border-r border-yellow-200 flex flex-col">
          <div class="bg-yellow-100 px-6 py-4 border-b border-yellow-200">
            <h2 class="text-xl font-semibold text-yellow-800 flex items-center justify-between">
              In Progress
              <span class="bg-yellow-200 text-yellow-900 text-lg px-3 py-1 rounded-full font-bold">
                {length(@tasks["in_progress"])}
              </span>
            </h2>
          </div>

          <div class="flex-1 p-6 overflow-y-auto">
            <div class="space-y-4">
              <div
                :for={task <- @tasks["in_progress"]}
                class="bg-white border border-gray-200 rounded-lg p-6 shadow hover:shadow-lg transition-shadow"
              >
                <h3 class="font-bold text-gray-900 text-lg mb-2">{task.title}</h3>
                <p :if={task.description} class="text-gray-600 mb-4">{task.description}</p>
                <div class="flex justify-between items-center">
                  <div class="space-x-2">
                    <a
                      href={"/tasks/#{task.id}/status?status=todo"}
                      class="bg-blue-100 hover:bg-blue-200 text-blue-800 px-4 py-2 rounded-full font-semibold transition-colors"
                    >
                      ← To Do
                    </a>
                    <a
                      href={"/tasks/#{task.id}/status?status=finished"}
                      class="bg-green-100 hover:bg-green-200 text-green-800 px-4 py-2 rounded-full font-semibold transition-colors"
                    >
                      → Finished
                    </a>
                  </div>
                  <div class="flex space-x-2">
                    <.link
                      href={~p"/tasks/#{task.id}/edit"}
                      class="text-blue-600 hover:text-blue-800 font-semibold"
                    >
                      Edit
                    </.link>
                    <a
                      href={~p"/tasks/#{task.id}"}
                      method="delete"
                      data-confirm="Delete this task?"
                      class="text-red-500 hover:text-red-700 font-semibold"
                    >
                      Delete
                    </a>
                  </div>
                </div>
              </div>
            </div>
            
<!-- Empty State -->
            <div :if={length(@tasks["in_progress"]) == 0} class="text-center py-16 text-gray-500">
              <div class="text-gray-400 mb-4">
                <svg
                  class="mx-auto h-16 w-16"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="1"
                    d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                  />
                </svg>
              </div>
              <p class="text-xl font-semibold">No tasks in progress</p>
            </div>
          </div>
        </div>
        
<!-- Finished Column -->
        <div class="flex-1 bg-green-50 flex flex-col">
          <div class="bg-green-100 px-6 py-4 border-b border-green-200">
            <h2 class="text-xl font-semibold text-green-800 flex items-center justify-between">
              Finished
              <span class="bg-green-200 text-green-900 text-lg px-3 py-1 rounded-full font-bold">
                {length(@tasks["finished"])}
              </span>
            </h2>
          </div>

          <div class="flex-1 p-6 overflow-y-auto">
            <div class="space-y-4">
              <div
                :for={task <- @tasks["finished"]}
                class="bg-white border border-gray-200 rounded-lg p-6 shadow opacity-80 hover:opacity-100 hover:shadow-lg transition-all"
              >
                <h3 class="font-bold text-gray-900 text-lg mb-2 line-through decoration-green-500 decoration-2">
                  {task.title}
                </h3>
                <p :if={task.description} class="text-gray-600 mb-4">{task.description}</p>
                <div class="flex justify-between items-center">
                  <a
                    href={"/tasks/#{task.id}/status?status=in_progress"}
                    class="bg-yellow-100 hover:bg-yellow-200 text-yellow-800 px-4 py-2 rounded-full font-semibold transition-colors"
                  >
                    ← Back to Progress
                  </a>
                  <div class="flex space-x-2">
                    <.link
                      href={~p"/tasks/#{task.id}/edit"}
                      class="text-blue-600 hover:text-blue-800 font-semibold"
                    >
                      Edit
                    </.link>
                    <a
                      href={~p"/tasks/#{task.id}"}
                      method="delete"
                      data-confirm="Delete this task?"
                      class="text-red-500 hover:text-red-700 font-semibold"
                    >
                      Delete
                    </a>
                  </div>
                </div>
              </div>
            </div>
            
<!-- Empty State -->
            <div :if={length(@tasks["finished"]) == 0} class="text-center py-16 text-gray-500">
              <div class="text-gray-400 mb-4">
                <svg
                  class="mx-auto h-16 w-16"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="1"
                    d="M5 13l4 4L19 7"
                  />
                </svg>
              </div>
              <p class="text-xl font-semibold">No completed tasks</p>
            </div>
          </div>
        </div>
      </div>
    </div>
    
<!-- Flash Messages -->
    <div id="flash-group" class="fixed top-4 right-4 z-50">
      <div
        :if={@flash["info"]}
        class="bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg mb-2"
      >
        {@flash["info"]}
      </div>
      <div :if={@flash["error"]} class="bg-red-500 text-white px-6 py-3 rounded-lg shadow-lg mb-2">
        {@flash["error"]}
      </div>
    </div>
  </body>
</html>
